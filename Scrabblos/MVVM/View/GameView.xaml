<UserControl x:Class="Scrabblos.MVVM.View.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scrabblos.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="2160" d:DesignWidth="3840"
             Background="DarkSeaGreen"
             Loaded="GameView_OnLoaded"
             Unloaded="GameView_OnUnloaded">
    <Grid Name="GameGrid">
        <Viewbox Name="GameViewBox">
            <Border Height="2160" Width="2880"
                    BorderBrush="White" BorderThickness="1">
                <Canvas Margin="0">
                    <Button Content="Home"
                        Command="{Binding NavigateToHomeCommand}"
                        Height="100" Width="400"
                        FontSize="36" Canvas.Left="1246" Canvas.Top="165" HorizontalAlignment="Center" VerticalAlignment="Center"/>


                    <Image Name="TileS" Source="/Resources/tileS.jpg"
                        Width="200" Height="200"
                        Canvas.Left="1189" Canvas.Top="829"
                        MouseLeftButtonUp="Tile_MouseLeftButtonUp" MouseLeftButtonDown="Tile_MouseLeftButtonDown" MouseMove="Tile_MouseMove"/>
                </Canvas>
            </Border>
        </Viewbox>
        <Grid Name="EscapeMenu"
              IsEnabled="false" Visibility="Hidden">
            <Grid Background="Black" Opacity=".7">
            </Grid>
            <Grid>
                <Viewbox>
                    <Border Height="2160" Width="3040"
                    BorderBrush="White" BorderThickness="1">
                        <StackPanel Margin="0 48">
                            <TextBlock Text="PAUZA"
                                       TextAlignment="Center"
                                       FontSize="36" FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
